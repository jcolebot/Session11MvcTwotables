@model CartoonDB.Models.Character

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Smell" class="control-label"></label>
                <input asp-for="Smell" class="form-control" />
                <span asp-validation-for="Smell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginStory" class="control-label"></label>
                <input asp-for="OriginStory" class="form-control" />
                <span asp-validation-for="OriginStory" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pants" /> @Html.DisplayNameFor(model => model.Pants)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FirstAppearance" class="control-label"></label>
                <input asp-for="FirstAppearance" class="form-control" />
                <span asp-validation-for="FirstAppearance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Which Show</label>
                <select name="showid" class="form-control">
                    @foreach (var show in ViewBag.Shows)
                    {
                        <option value="@show.Id">@show.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
